{
	"name": "sveltacular",
	"version": "0.0.77",
	"description": "A Svelte component library",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jasonbyrne/sveltacular.git"
	},
	"bugs": {
		"url": "https://github.com/jasonbyrne/sveltacular/issues"
	},
	"homepage": "https://github.com/jasonbyrne/sveltacular#readme",
	"license": "Apache-2.0",
	"author": "Jason Byrne <jasonbyrne662@gmail.com>",
	"keywords": [
		"svelte",
		"sveltekit",
		"component",
		"library",
		"ui",
		"kit",
		"storybook",
		"vite",
		"typescript",
		"css",
		"scss",
		"helpers"
	],
	"scripts": {
		"watch": "storybook dev -p 6006",
		"sv:watch": "vite dev -- --open",
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/**/*.stories.*"
	],
	"peerDependencies": {
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@storybook/addon-docs": "^10.1.10",
		"@storybook/addon-links": "^10.1.10",
		"@storybook/addon-svelte-csf": "^5.0.10",
		"@storybook/sveltekit": "^10.1.10",
		"@sveltejs/adapter-auto": "^3.2.5",
		"@sveltejs/kit": "^2.5.28",
		"@sveltejs/package": "^2.3.5",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@typescript-eslint/eslint-plugin": "^8.6.0",
		"@typescript-eslint/parser": "^8.6.0",
		"css-loader": "^7.1.2",
		"eslint": "^9.11.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-storybook": "^10.1.10",
		"eslint-plugin-svelte": "^3.0.0",
		"prettier": "^3.3.3",
		"prettier-plugin-svelte": "^3.2.6",
		"publint": "^0.2.11",
		"sass": "^1.80.0",
		"sass-loader": "^16.0.2",
		"storybook": "^10.1.10",
		"style-loader": "^4.0.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tslib": "^2.7.0",
		"typescript": "^5.6.2",
		"vite": "^6.0.0",
		"vitest": "^2.1.1"
	},
	"svelte": "./dist/index.js",
	"type": "module"
}
