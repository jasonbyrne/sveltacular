{
	"name": "sveltacular",
	"version": "0.0.52",
	"description": "A Svelte component library",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jasonbyrne/sveltacular.git"
	},
	"bugs": {
		"url": "https://github.com/jasonbyrne/sveltacular/issues"
	},
	"homepage": "https://github.com/jasonbyrne/sveltacular#readme",
	"license": "Apache-2.0",
	"author": "Jason Byrne <jasonbyrne662@gmail.com>",
	"keywords": [
		"svelte",
		"sveltekit",
		"component",
		"library",
		"ui",
		"kit",
		"storybook",
		"vite",
		"typescript",
		"css",
		"scss",
		"helpers"
	],
	"scripts": {
		"watch": "npm run dev -- --open",
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"storybook": "storybook dev -p 6006",
		"build-storybook": "storybook build"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/**/*.stories.*"
	],
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"devDependencies": {
		"@storybook/addon-essentials": "^7.6.17",
		"@storybook/addon-interactions": "^7.6.17",
		"@storybook/addon-links": "^7.6.17",
		"@storybook/addon-svelte-csf": "^4.1.1",
		"@storybook/blocks": "^7.6.17",
		"@storybook/preset-scss": "^1.0.3",
		"@storybook/svelte": "^7.6.17",
		"@storybook/sveltekit": "^7.6.17",
		"@storybook/testing-library": "^0.2.2",
		"@sveltejs/adapter-auto": "^3.1.1",
		"@sveltejs/kit": "^2.5.1",
		"@sveltejs/package": "^2.2.7",
		"@typescript-eslint/eslint-plugin": "^7.0.2",
		"@typescript-eslint/parser": "^7.0.2",
		"css-loader": "^6.10.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-storybook": "^0.8.0",
		"eslint-plugin-svelte": "^2.35.1",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.1",
		"publint": "^0.2.7",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"sass": "^1.71.1",
		"sass-loader": "^14.1.1",
		"storybook": "^7.6.17",
		"storybook-dark-mode": "^3.0.3",
		"style-loader": "^3.3.4",
		"svelte": "^4.2.12",
		"svelte-check": "^3.6.4",
		"tslib": "^2.6.2",
		"typescript": "^5.3.3",
		"vite": "^5.1.4",
		"vitest": "^1.3.1"
	},
	"svelte": "./dist/index.js",
	"type": "module"
}
